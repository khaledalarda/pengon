{
  "name": "pengon",
  "version": "1.0.0",
  "description": "Pengon interactive story project",
  "scripts": {
    "dev": "concurrently \"npm run sass:watch\" \"npm run serve:dev\"",
    "sass:watch": "sass sass:styles --watch --source-map",
    "serve:dev": "live-server --port=3000 --open=/index.html --watch=index.html,js,assets,styles",
    "build": "npm run sass:build && npm run copy:assets",
    "sass:build": "sass sass:styles --style=compressed",
    "copy:assets": "node scripts/copy-assets.js"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "sass": "^1.69.0"
  }
}
